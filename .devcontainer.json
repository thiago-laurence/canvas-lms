{
  "name": "canvas-lms",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-20.04",
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y curl git",
  "service": "web",
  "workspaceFolder": "/usr/workspaces/canvas-lms",
  "customizations": {
    "vscode": {
      "extensions": [
        "biomejs.biome",
        "dbaeumer.vscode-eslint",
        "koichisasada.vscode-rdbg",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "Shopify.ruby-lsp",
        "eamodio.gitlens"
      ]
    }
  }
}
